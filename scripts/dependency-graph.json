{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Component dependency graph for visual regression testing optimization",
    "sharedFiles": {
        "description": "Changes to these patterns affect all components and trigger full test runs",
        "patterns": [
            "packages/core/src/styles/**",
            "packages/core/src/utils/**",
            "packages/core/src/libs/**",
            "packages/core/src/index.ts",
            "packages/icons/src/**",
            "packages/hooks/src/**",
            "apps/storybook/.storybook/**"
        ],
        "affectsAll": true
    },
    "components": {
        "box": {
            "description": "Base layout component",
            "dependents": ["flex", "grid", "toast", "sheet", "collapsible", "floating-bar"]
        },
        "flex": {
            "description": "Flexbox layout component",
            "depends": ["box"],
            "dependents": ["h-stack", "v-stack"]
        },
        "h-stack": {
            "description": "Horizontal stack layout",
            "depends": ["flex"],
            "dependents": ["toast", "navigation-menu", "tabs"]
        },
        "v-stack": {
            "description": "Vertical stack layout",
            "depends": ["flex"],
            "dependents": ["toast", "navigation-menu"]
        },
        "grid": {
            "description": "Grid layout component",
            "depends": ["box"],
            "dependents": []
        },
        "button": {
            "description": "Button component",
            "dependents": ["icon-button", "toast"]
        },
        "icon-button": {
            "description": "Icon button component",
            "depends": ["button"],
            "dependents": ["toast", "collapsible"]
        },
        "badge": {
            "description": "Badge component",
            "dependents": ["multi-select", "floating-bar"]
        },
        "dialog": {
            "description": "Dialog/modal component",
            "dependents": ["sheet"]
        },
        "sheet": {
            "description": "Sheet/drawer component",
            "depends": ["dialog"]
        },
        "radio-group": {
            "description": "Radio group context provider",
            "dependents": ["radio", "radio-card"]
        },
        "radio": {
            "description": "Radio button component",
            "depends": ["radio-group"]
        },
        "radio-card": {
            "description": "Radio card component",
            "depends": ["radio-group"]
        },
        "input-group": {
            "description": "Input group context provider",
            "dependents": ["text-input", "textarea"]
        },
        "text-input": {
            "description": "Text input component",
            "depends": ["input-group"]
        },
        "textarea": {
            "description": "Textarea component",
            "depends": ["input-group"]
        },
        "multi-select": {
            "description": "Multi-select dropdown",
            "depends": ["badge"]
        },
        "floating-bar": {
            "description": "Floating action bar",
            "depends": ["box", "badge"]
        },
        "toast": {
            "description": "Toast notification component",
            "depends": ["box", "button", "h-stack", "v-stack", "icon-button"]
        },
        "collapsible": {
            "description": "Collapsible panel component",
            "depends": ["box", "icon-button"]
        },
        "navigation-menu": {
            "description": "Navigation menu component",
            "depends": ["h-stack", "v-stack"]
        },
        "tabs": {
            "description": "Tabs component",
            "depends": ["h-stack"]
        },
        "avatar": {
            "description": "Avatar component",
            "dependents": []
        },
        "breadcrumb": {
            "description": "Breadcrumb navigation",
            "dependents": []
        },
        "callout": {
            "description": "Callout/alert component",
            "dependents": []
        },
        "card": {
            "description": "Card component",
            "dependents": []
        },
        "checkbox": {
            "description": "Checkbox component",
            "dependents": []
        },
        "field": {
            "description": "Form field wrapper",
            "dependents": []
        },
        "form": {
            "description": "Form component",
            "dependents": []
        },
        "menu": {
            "description": "Dropdown menu component",
            "dependents": []
        },
        "pagination": {
            "description": "Pagination component",
            "dependents": []
        },
        "popover": {
            "description": "Popover component",
            "dependents": []
        },
        "select": {
            "description": "Select dropdown component",
            "dependents": []
        },
        "switch": {
            "description": "Switch/toggle component",
            "dependents": []
        },
        "table": {
            "description": "Table component",
            "dependents": []
        },
        "text": {
            "description": "Text/typography component",
            "dependents": []
        },
        "tooltip": {
            "description": "Tooltip component",
            "dependents": []
        },
        "theme-provider": {
            "description": "Theme context provider",
            "dependents": []
        }
    }
}
