    "devDependencies": {
        "@repo/eslint-config": "workspace:^",
        "@repo/typescript-config": "workspace:^",
        "@types/fs-extra": "^11.0.1",
        "@vitest/coverage-v8": "^3.2.4",
        "eslint": "^9.39.2",
        "get-tsconfig": "^4.13.0",
        "prettier": "^3.7.4",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4"
