{
    "name": "@vapor-ui/color-generator",
    "version": "1.0.0-beta.8",
    "keywords": [
        "color",
        "palette",
        "theme",
        "OKLCH"
    ],
    "homepage": "https://github.com/goorm-dev/vapor-ui",
    "bugs": {
        "url": "https://github.com/goorm-dev/vapor-ui/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/goorm-dev/vapor-ui.git",
        "directory": "packages/color-generator"
    },
    "license": "MIT",
    "author": "Vapor Team <vapor.ui@goorm.io>",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rimraf dist && tsup",
        "clean": "rimraf dist node_modules .turbo",
        "format": "prettier --write \"./**/*.{ts,tsx,md}\"",
        "format:check": "prettier --check \"./**/*.{ts,tsx,md}\"",
        "lint": "eslint ./src",
        "test": "vitest --run",
        "test:watch": "vitest",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@adobe/leonardo-contrast-colors": "^1.0.0",
        "culori": "^4.0.1"
    },
    "devDependencies": {
        "@repo/eslint-config": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "@types/culori": "^4.0.0",
        "@types/node": "^22.15.3",
        "eslint": "catalog:",
        "rimraf": "^6.1.3",
        "tsup": "^8.3.6",
        "tsx": "^4.19.2",
        "typescript": "catalog:",
        "vitest": "^3.2.4"
    },
    "publishConfig": {
        "access": "public"
    }
}
