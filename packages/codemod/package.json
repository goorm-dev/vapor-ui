{
    "name": "@vapor-ui/codemod",
    "version": "1.0.0",
    "description": "Code migration tools using jscodeshift",
    "keywords": [
        "vapor-ui migration",
        "jscodeshift",
        "codemod"
    ],
    "main": "dist/src/index.mjs",
    "bin": {
        "vapor-codemod": "./dist/bin/cli.mjs"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "clean": "rimraf dist node_modules coverage .turbo",
        "dev": "tsup --watch",
        "format": "prettier --write \"./**/*.{ts,tsx,md}\"",
        "format:check": "prettier --check \"./**/*.{ts,tsx,md}\"",
        "lint": "eslint ./src",
        "test": "jest",
        "test:watch": "jest --watchAll",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@inquirer/prompts": "^8.3.0",
        "globby": "^16.1.1",
        "is-git-clean": "^1.1.0",
        "jscodeshift": "^17.3.0",
        "meow": "^14.0.0",
        "picocolors": "^1.1.1"
    },
    "devDependencies": {
        "@prettier/sync": "^0.6.1",
        "@repo/eslint-config": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "@types/is-git-clean": "^1.1.2",
        "@types/jest": "^30.0.0",
        "@types/jscodeshift": "^17.3.0",
        "@types/node": "^24.10.13",
        "@vapor-ui/core": "workspace:*",
        "@vapor-ui/icons": "workspace:*",
        "eslint": "catalog:",
        "jest": "^30.2.0",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.1.0",
        "tsup": "^8.5.0"
    },
    "engines": {
        "node": ">=24.13.1"
    },
    "publishConfig": {
        "access": "public"
    }
}
