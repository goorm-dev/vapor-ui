{
    "extends": "@repo/typescript-config/base",
    "compilerOptions": {
        "target": "ES2022",
        "moduleResolution": "node",
        "module": "es2022",

        "esModuleInterop": true,
        "isolatedModules": true,

        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "baseUrl": "./", // src를 기준으로 경로 해석
        "paths": {
            "~/*": ["./src/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
