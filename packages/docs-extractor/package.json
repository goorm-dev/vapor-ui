{
    "name": "@vapor-ui/docs-extractor",
    "version": "1.0.0",
    "description": "Extract component documentation and type information from TypeScript files",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "docs-extractor": "dist/bin/cli.js"
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "clean": "rimraf dist"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "keywords": [
        "typescript",
        "documentation",
        "component-analysis",
        "type-extraction"
    ],
    "dependencies": {
        "typescript": "^5.0.0",
        "typescript-api-extractor": "^1.0.0-alpha.8",
        "lodash-es": "^4.17.21",
        "prettier": "^3.0.0",
        "yargs": "^17.0.0",
        "globby": "^14.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/lodash-es": "^4.17.12",
        "@types/yargs": "^17.0.0",
        "rimraf": "^5.0.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}
