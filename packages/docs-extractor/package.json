{
    "name": "@vapor-ui/docs-extractor",
    "version": "1.0.0",
    "description": "Extract component documentation and type information from TypeScript files",
    "type": "module",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "docs-extractor": "dist/bin/cli.js"
    },
    "scripts": {
        "build": "rimraf dist && tsup",
        "dev": "tsc --watch",
        "lint": "eslint ./src",
        "format": "prettier --write \"./**/*.{ts,tsx,md}\"",
        "format:check": "prettier --check \"./**/*.{ts,tsx,md}\"",
        "clean": "rimraf dist node_modules .turbo"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "keywords": [
        "typescript",
        "documentation",
        "component-analysis",
        "type-extraction"
    ],
    "dependencies": {
        "globby": "^14.0.0",
        "lodash-es": "^4.17.21",
        "prettier": "^3.0.0",
        "typescript": "^5.0.0",
        "yargs": "^17.0.0"
    },
    "devDependencies": {
        "@repo/eslint-config": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "@types/lodash-es": "^4.17.12",
        "@types/node": "^20.0.0",
        "@types/yargs": "^17.0.0",
        "eslint": "^9.36.0",
        "rimraf": "^5.0.0",
        "tsup": "^8.3.6",
        "typescript-api-extractor": "1.0.0-alpha.8"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
