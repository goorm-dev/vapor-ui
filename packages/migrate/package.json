{
    "name": "@vapor-ui/migrate",
    "version": "1.0.0",
    "description": "Code migration tools using jscodeshift",
    "main": "dist/index.js",
    "bin": {
        "vapor-migrate": "dist/cli.js"
    },
    "jest": {
        "globals": {
            "baseDir": "../"
        },
        "testEnvironment": "node",
        "roots": [
            "src/transforms"
        ],
        "transform": {
            "^.+\\.jsx?$": "babel-jest",
            "^.+\\.tsx?$": "ts-jest"
        }
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "test": "jest",
        "test:watch": "jest --watch",
        "prepublish": "npm run build"
    },
    "dependencies": {
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "@vapor-ui/core": "1.0.0-beta.0",
        "@vapor-ui/icons": "1.0.0-beta.0",
        "commander": "^11.1.0",
        "jscodeshift": "^17.3.0",
        "react": "^19.2.0",
        "react-dom": "^19.2.0"
    },
    "devDependencies": {
        "@repo/typescript-config": "workspace:*",
        "@types/jest": "^29.5.0",
        "@types/jscodeshift": "^17.3.0",
        "@types/node": "^20.0.0",
        "jest": "^29.7.0",
        "prettier": "^3.3.0",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.0"
    },
    "files": [
        "dist",
        "transforms"
    ],
    "keywords": [
        "vapor-ui migration",
        "jscodeshift",
        "codemod"
    ]
}
