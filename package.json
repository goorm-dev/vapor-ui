{
    "name": "vapor-ui",
    "description": "An open-source component library for building high-quality, accessible web applications. Features easy customization and AI-friendly components. Maintained by @goorm-dev.",
    "private": true,
    "version": "0.0.0",
    "author": "Vapor Team <vapor.ui@goorm.io>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/goorm-dev/vapor-ui.git"
    },
    "scripts": {
        "build": "turbo run build",
        "lint": "turbo run lint",
        "clean": "turbo run clean && rimraf node_modules .turbo",
        "start": "turbo run start",
        "test": "turbo run test",
        "storybook": "storybook dev -p 9009",
        "build-storybook": "storybook build",
        "format": "turbo run format",
        "format:check": "turbo run format:check",
        "core": "pnpm --filter @vapor-ui/core",
        "hooks": "pnpm --filter @vapor-ui/hooks",
        "icons": "pnpm --filter @vapor-ui/icons",
        "tailwindcss": "pnpm --filter @vapor-ui/tailwindcss",
        "website": "pnpm --filter website",
        "dev": "turbo dev",
        "prepare": "husky",
        "typecheck": "turbo typecheck",
        "release": "turbo run build --filter=./packages/* && changeset publish",
        "version": "changeset version && pnpm install --lockfile-only"
    },
    "devDependencies": {
        "@changesets/cli": "^2.28.1",
        "@joshwooding/vite-plugin-react-docgen-typescript": "^0.5.0",
        "@storybook/addon-controls": "^8.6.4",
        "@storybook/addon-essentials": "^8.6.4",
        "@storybook/addon-interactions": "^8.6.4",
        "@storybook/addon-storysource": "^8.6.4",
        "@storybook/blocks": "^8.6.4",
        "@storybook/builder-vite": "^8.6.4",
        "@storybook/react": "^8.6.4",
        "@storybook/react-vite": "^8.6.4",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/react": "^18.3.1",
        "@types/react-dom": "^18.3.1",
        "@vanilla-extract/vite-plugin": "^5.0.1",
        "@vitejs/plugin-react": "^4.3.4",
        "husky": "^9.1.7",
        "prettier": "^3.2.5",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "rimraf": "^6.0.1",
        "storybook": "^8.6.4",
        "turbo": "^2.3.4",
        "typescript": "^5.7.3",
        "vite": "^6.1.0"
    },
    "engines": {
        "node": ">=20.x"
    },
    "packageManager": "pnpm@10.5.0"
}
