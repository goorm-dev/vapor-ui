{
    "name": "vapor-ui",
    "description": "An open-source component library for building high-quality, accessible web applications. Features easy customization and AI-friendly components. Maintained by @goorm-dev.",
    "private": true,
    "type": "module",
    "version": "0.0.0",
    "author": "Vapor Team <vapor.ui@goorm.io>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/goorm-dev/vapor-ui.git"
    },
    "scripts": {
        "build": "turbo run build",
        "lint": "turbo run lint",
        "clean": "turbo run clean && rimraf node_modules .turbo",
        "start": "turbo run start",
        "test": "turbo run test",
        "format": "turbo run format",
        "format:check": "turbo run format:check",
        "build:storybook": "turbo run build:storybook",
        "test:regressions": "turbo run test:regressions",
        "test:update-snapshots": "turbo run test:regressions -- --update-snapshots",
        "core": "pnpm --filter @vapor-ui/core",
        "hooks": "pnpm --filter @vapor-ui/hooks",
        "icons": "pnpm --filter @vapor-ui/icons",
        "color-generator": "pnpm --filter @vapor-ui/color-generator",
        "css-generator": "pnpm --filter @vapor-ui/css-generator",
        "storybook": "pnpm --filter storybook",
        "website": "pnpm --filter website",
        "figma-plugin": "pnpm --filter figma-plugin",
        "figma-codegen-plugin": "pnpm --filter figma-codegen-plugin",
        "codemod": "pnpm --filter @vapor-ui/codemod",
        "dev": "turbo dev",
        "prepare": "husky",
        "typecheck": "turbo typecheck",
        "release": "turbo run build --filter=./packages/* && changeset publish",
        "version": "changeset version && pnpm version:changelog && pnpm install --lockfile-only",
        "version:changelog": "node ./scripts/post-process-changelog.js",
        "update-releases": "node scripts/update-releases.mjs",
        "sync-icons:basic": "TYPE=basic node --env-file=.env --experimental-fetch ./scripts/syncFigmaIcons.mjs && pnpm format",
        "sync-icons:symbol": "TYPE=symbol node --env-file=.env --experimental-fetch ./scripts/syncFigmaIcons.mjs && pnpm format"
    },
    "devDependencies": {
        "@changesets/cli": "^2.28.1",
        "@changesets/get-github-info": "^0.7.0",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/node": "^22.15.4",
        "@types/react": "^18.3.2",
        "@types/react-dom": "^18.3.2",
        "dotenv": "^17.2.3",
        "husky": "^9.1.7",
        "lodash-es": "^4.17.21",
        "prettier": "^3.3.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "rimraf": "^6.0.1",
        "semver": "^7.7.2",
        "turbo": "^2.3.6",
        "typescript": "^5.9.2"
    },
    "engines": {
        "node": ">=20.19"
    },
    "packageManager": "pnpm@10.5.1"
}
