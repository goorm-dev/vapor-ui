{
    "name": "figma-codegen-plugin",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "rimraf dist && mkdir -p dist && node build.mjs && cp manifest.json dist/",
        "clean": "rimraf dist node_modules .turbo",
        "dev": "node build.mjs --watch",
        "format": "prettier --write \"./**/*.{ts,md}\"",
        "format:check": "prettier --check \"./**/*.{ts,md}\"",
        "lint": "eslint ./src",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {},
    "devDependencies": {
        "@figma/plugin-typings": "^1.121.0",
        "@repo/eslint-config": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "esbuild": "^0.27.2",
        "eslint": "catalog:",
        "typescript": "catalog:"
    }
}
