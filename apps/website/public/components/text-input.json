{
    "props": [
        {
            "prop": "render",
            "type": ["ReactElement", "function"],
            "default": "input",
            "description": "텍스트 입력을 렌더링할 때 사용할 커스텀 렌더링 요소입니다."
        },
        {
            "prop": "type",
            "type": ["text", "email", "password", "url", "tel", "search"],
            "default": "text",
            "description": "입력 필드의 HTML 타입을 지정합니다."
        },
        {
            "prop": "value",
            "type": ["string"],
            "default": "undefined",
            "description": "제어형 컴포넌트로 사용할 때 입력 값입니다."
        },
        {
            "prop": "defaultValue",
            "type": ["string"],
            "default": "",
            "description": "비제어형 컴포넌트 초기 입력 값입니다."
        },
        {
            "prop": "onValueChange",
            "type": ["function"],
            "default": "undefined",
            "description": "입력 값이 변경될 때 호출되는 콜백 함수입니다. (value: string, event: Event) => void 형태입니다."
        },
        {
            "prop": "placeholder",
            "type": ["string"],
            "default": "undefined",
            "description": "입력 필드가 비어 있을 때 표시되는 안내 텍스트입니다."
        },
        {
            "prop": "size",
            "type": ["sm", "md", "lg", "xl"],
            "default": "md",
            "description": "입력 필드의 크기를 설정합니다."
        },
        {
            "prop": "disabled",
            "type": ["boolean"],
            "default": false,
            "description": "입력 필드를 비활성화합니다."
        },
        {
            "prop": "invalid",
            "type": ["boolean"],
            "default": false,
            "description": "검증 오류 상태임을 나타냅니다."
        },
        {
            "prop": "readOnly",
            "type": ["boolean"],
            "default": false,
            "description": "읽기 전용으로 설정하여 값 변경을 방지합니다."
        },
        {
            "prop": "required",
            "type": ["boolean"],
            "default": false,
            "description": "필수 입력 필드임을 나타냅니다."
        },
        {
            "prop": "autoComplete",
            "type": ["string"],
            "default": "undefined",
            "description": "브라우저의 자동 완성 기능을 제어합니다."
        },
        {
            "prop": "autoFocus",
            "type": ["boolean"],
            "default": false,
            "description": "페이지 로드 시 자동으로 포커스를 받을지 설정합니다."
        },
        {
            "prop": "maxLength",
            "type": ["number"],
            "default": "undefined",
            "description": "입력 가능한 최대 문자 수를 제한합니다."
        },
        {
            "prop": "minLength",
            "type": ["number"],
            "default": "undefined",
            "description": "입력 가능한 최소 문자 수를 제한합니다."
        },
        {
            "prop": "name",
            "type": ["string"],
            "default": "undefined",
            "description": "폼 제출 시 사용될 필드 이름입니다."
        },
        {
            "prop": "id",
            "type": ["string"],
            "default": "undefined",
            "description": "입력 필드의 고유 식별자입니다."
        },
        {
            "prop": "className",
            "type": ["string"],
            "default": "undefined",
            "description": "추가적인 CSS 클래스를 적용합니다."
        },
        {
            "prop": "onChange",
            "type": ["function"],
            "default": "undefined",
            "description": "입력 값 변경 시 호출되는 네이티브 이벤트 핸들러입니다."
        },
        {
            "prop": "onBlur",
            "type": ["function"],
            "default": "undefined",
            "description": "포커스를 잃었을 때 호출되는 이벤트 핸들러입니다."
        },
        {
            "prop": "onFocus",
            "type": ["function"],
            "default": "undefined",
            "description": "포커스를 받았을 때 호출되는 이벤트 핸들러입니다."
        }
    ]
}
